<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/reviewerIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:autoLink="all"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reviewAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autoLink="all"
            android:textColor="@color/colorPrimary"
            android:text="William Dencker" />

            <RatingBar
                android:id="@+id/reviewRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-60dp"
                android:layout_marginTop="-15dp"
                android:layout_marginBottom="-15dp"
                android:isIndicator="true"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:numStars="5"
                android:stepSize="0.1"
                android:gravity="left|center_vertical"
                android:layout_column="1"/>

        <TextView
            android:id="@+id/reviewTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2018-03-16 18:44:30" />

        <TextView
            android:id="@+id/reviewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="false"
            android:text="I will go here to obtain friends through conversation and socializing effectively. I have high hopes that I will have ones to converse with, thank you for reading this critical review in my lifespan. I may be 4 but I believe I can get into this school by the age of 9 easily." />
    </LinearLayout>

</LinearLayout>